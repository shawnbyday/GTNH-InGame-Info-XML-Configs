<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<config>
  <lines at="bottomleft">
    <line>
      <if>
        <var>daytime</var>
        <str>$e{mctime12}</str>
        <str>$7{mctime12}</str>
      </if>
      <str>$f, {day}</str>
    </line>
    <line>
      <if>
        <equal>
          <modi>
            <num>{chunkx}</num>
            <num>3</num>
          </modi>
          <num>1</num>
        </equal>
        <concat>
          <str>$acX: </str>
          <num>$a{chunkx}</num>
          <str> $a({chunkoffsetx})$f</str>
        </concat>
        <concat>
          <str>cX: </str>
          <num>{chunkx}</num>
          <str> ({chunkoffsetx})</str>
        </concat>
      </if>
    </line>
    <line>
      <if>
        <equal>
          <modi>
            <num>{chunkz}</num>
            <num>3</num>
          </modi>
          <num>1</num>
        </equal>
        <concat>
          <str>$acZ: </str>
          <num>$a{chunkz}</num>
          <str> $a({chunkoffsetz})$f</str>
        </concat>
        <concat>
          <str>cZ: </str>
          <num>{chunkz}</num>
          <str> ({chunkoffsetz})</str>
        </concat>
      </if>
    </line>
  </lines>
</config>